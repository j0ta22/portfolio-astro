---
interface Props {
  title: string;
  description: string;
  image_url: string;
  url: string;
}

const { title, description, image_url, url } = Astro.props;
---

<a
  href={url}
  class="rounded-lg border shadow-md opacity-80 bg-slate-950 border-purple-950 hover:scale-105 hover:bg-slate-800 hover:border-slate-500 transition flex flex-col"
>
  <picture class="flex justify-center p-4">
    <img class="mb-5 rounded-lg" src={image_url} alt={title} />
  </picture>

  <header class="p-4 flex-grow">
    <h2 class="my-2 text-2xl font-bold tracking-tight text-slate-400">{title}</h2>
    <p class="mb-4 font-light text-slate-400">{description}</p>
  </header>
</a>
